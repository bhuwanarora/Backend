    <th>S.No.</th>
    <th>Name</th>
    <th>#Books</th>
    <th>Year</th>
    <th>Imdb</th>
  </tr>
  <% @movies.each_with_index do |movie, index|%>
    <tr>
      <td><%= index %></td>
      <td><%= movie[1] %></td>
      <td><%= movie[4] %></td>
      <td><%= movie[2] %></td>
      <td><a href="<%= movie[3] %>" target="_blank">Imdb</a></td>
    </tr>
  <% end %>
</table>
