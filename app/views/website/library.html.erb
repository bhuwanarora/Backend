<section layout="row" layout-sm="column" layout-align="center center" layout-wrap ng-if="constant.show_book">
    <div flex="25" hide-sm flex-md="10"></div>
    <div flex="50" flex-md="80" layout="row" layout-sm="column" layout-align="center center" layout-wrap>
        <div class="book" ng-style="book_style">
            <section class="md-whiteframe-z1 subheader" layout="row" layout-wrap>
                <div flex="70" layout="wrap" layout-align="start center">
                    Nineteen Eighty-Four(1949)
                </div>
                <div flex="30" layout="wrap" layout-align="end center">
                    <div flex><h5>News</h5></div>
                    <div flex><h5>Discussions</h5></div>
                    <div flex><h5>Buy</h5></div>
                </div>
            </section>
        </div>
    </div>
    <div flex="25" hide-sm flex-md="10"></div>
</section>

<md-content>
    <md-subheader class="md-primary filters_header">
        <!-- <div layout="row" class="filters"> -->
            <section layout="row" layout-sm="column" layout-align="center center" layout-wrap>
                <div flex="25" hide-sm flex-md="10"></div>
                <div flex="50" flex-md="80" layout="row" layout-sm="column" layout-align="center center" layout-wrap>
                    <md-autocomplete
                        flex="20"
                        flex-sm="100"
                        md-selected-item="selectedItem1"
                        md-search-text="searchText"
                        md-items="item in querySearch(searchText)"
                        md-item-text="display"
                        placeholder="Genre">
                        <span md-highlight-text="searchText">{{item.display}}</span>
                    </md-autocomplete>
                    <md-autocomplete
                        flex="20"
                        flex-sm="100"
                        md-selected-item="selectedItem2"
                        md-search-text="searchText"
                        md-items="item in querySearch(searchText)"
                        md-item-text="display"
                        placeholder="Author">
                        <span md-highlight-text="searchText">{{item.display}}</span>
                    </md-autocomplete>
                    <md-autocomplete
                        flex="20"
                        flex-sm="100"
                        md-selected-item="selectedItem3"
                        md-search-text="searchText"
                        md-items="item in querySearch(searchText)"
                        md-item-text="display"
                        placeholder="Year">
                        <span md-highlight-text="searchText">{{item.display}}</span>
                    </md-autocomplete>
                    <md-autocomplete
                        flex="20"
                        flex-sm="100"
                        md-selected-item="selectedItem4"
                        md-search-text="searchText"
                        md-items="item in querySearch(searchText)"
                        md-item-text="display"
                        placeholder="Duration">
                        <span md-highlight-text="searchText">{{item.display}}</span>
                    </md-autocomplete>
                    <md-button class="md-raised" flex="10" flex-sm="100">
                        Reset
                    </md-button>
                </div>
                <div flex="25" hide-sm flex-md="10"></div>
            </section>
        

        <!-- </div> -->
    </md-subheader>
    <section>
        
        <section layout="row" layout-wrap>
            <div flex="25" hide-sm flex-md="10"></div>
            <div flex="50" flex-sm="100" flex-md="80" layout="column" class="white">
                <section layout="row" layout-wrap>
                    <div flex="25">
                        <img src="http://upload.wikimedia.org/wikipedia/commons/7/7e/George_Orwell_press_photo.jpg" width="160px"></div>
                    <md-whiteframe flex="75" layout-fill>
                        <p>
                            <h4>George Orwell</h4>
                            <div>Eric Arthur Blair (25 June 1903 â€“ 21 January 1950),[1] who used the pen name George Orwell, was an English novelist, essayist, journalist and critic. His work is marked by lucid prose, awareness of social injustice, opposition to totalitarianism, and commitment to democratic socialism.[2][3]</div>
                        </p>
                    </md-whiteframe>
                </section>
            </div>
            <div flex="25" hide-sm flex-md="10"></div>
        </section>
        <section layout="row" layout-wrap>
            <div flex="25" hide-sm flex-md="10">
                <md-content layout="column" class="md-padding" layout-align="start end">
                    <h3>Sort by</h3>
                    <div>Genre</div>
                    <div>Year</div>
                    <div>Author</div>
                    <div>Duration</div>
                </md-content>
            </div>
            <div flex="50" flex-sm="100" flex-md="80" layout="column" class="white"  ng-style="grid_style">
                <md-divider></md-divider>
                <md-whiteframe layout-fill>
                    <h4>Recommendations for you</h4>
                </md-whiteframe>
                <md-whiteframe layout-fill>
                    <md-grid-list
                        md-cols-sm="1" md-cols-md="2" md-cols-gt-md="5"
                        md-row-height-gt-md="1:1"
                        md-gutter="1px" md-gutter-gt-sm="1px" >
                        <md-grid-tile ng-repeat="tile in colorTiles"
                            md-rowspan="2"
                            md-colspan="1"
                            ng-style="{'background': tile.color}" 
                            id="{{tile.color}}"
                            ng-class="tile.color" >
                            <md-button aria-label="" ng-click="show_book($event)">
                                <md-icon md-svg-icon="{{tile.icon}}"></md-icon>
                            </md-button>
                            <!-- <md-grid-tile-footer><h3>{{tile.title}}</h3></md-grid-tile-footer> -->
