<%= stylesheet_link_tag 'recommendation'%>
<horizontal-scroller></horizontal-scroller>
<div ng-controller="recommendationsController">
	<shelf ng-if="bookmark_selected || read_selected"></shelf>
	<more-filters ng-if="show_more_filters"></more-filters>
	<div ng-view></div>
	<div id="recommendationFooter">
		<div class="website-title">
			Reader's Door
		</div>
		<div class="search_link" ng-click="search()">
			Start typing now to search...
		</div>
		<div class="more_filters_link" 
			  ng-click="toggleMoreFilters()" 
			  ng-class="{'more_filters_active_link':show_more_filters, 'more_filters_inactive_link':!show_more_filters}">
			 Filters
		</div>
		<div class="shelf_nav_links">
			<div ng-class="{'bookmarked_shelf_nav':!bookmarked_selected, 'bookmarked_shelf_nav_selected':bookmark_selected}"
			ng-click="toggleBookmarked()">
				<b>BOOKMARKED</b>
			</div>
			<div ng-class="{'read_shelf_nav':!read_selected, 'read_shelf_nav_selected':read_selected}"
			ng-click="toggleRead()"><b>READ</b></div>
		</div>
	</div>
</div>
