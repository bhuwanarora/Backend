<!DOCTYPE html>
<html>
  <head>
    <title>ReadersDoor</title>
    <!-- <base href="/"> -->
    <!-- <link rel="stylesheet" href="http://i.icomoon.io/public/temp/879b1518b3/UntitledProject1/style.css"> -->
    <link rel="stylesheet" type="text/css" href="assets/min/site.min.css">
  </head>
  <body ng-controller="websiteAppController" 
        ng-keydown="handle_keyboard_bindings($event)">
    <%= render :partial => "website/loading"%>
    <link rel="stylesheet" type="text/css" href="assets/min/search_page.min.css">

    <!-- jquery -->
    <!-- angular vendors -->
    <%= javascript_include_tag *Dir[Rails.root.join("/assets/angular/vendors/*.js")] %>
    <!-- angular libs -->
    <%= javascript_include_tag *Dir[Rails.root.join("/assets/lib/*.js")] %>
    <!-- angular apps -->
    <%= javascript_include_tag *Dir[Rails.root.join("/assets/angular/apps/*.js")] %>
    <!-- angular directives -->
    <%= javascript_include_tag *Dir[Rails.root.join("/assets/angular/directives/**/*.js")] %>
    <!-- angualar services -->
    <%= javascript_include_tag *Dir[Rails.root.join("/assets/angular/services/*.js")] %>
    <!-- angular widgets -->
    <%= javascript_include_tag *Dir[Rails.root.join("/assets/angular/widgets/**/*.js")] %>
    <!-- angular controllers -->
    <%= javascript_include_tag *Dir[Rails.root.join("/assets/angular/controllers/*.js")] %>

    <%#= javascript_include_tag Rails.root.join("/assets/angular/vendors/angular.min.js") %>


    <%#= javascript_include_tag Rails.root.join("/assets/min/angular/vendors.js") %>
    <%#= javascript_include_tag Rails.root.join("/assets/min/angular/libs.js") %>
    <%#= javascript_include_tag Rails.root.join("/assets/min/angular/apps/website_app.js") %>
    <%#= javascript_include_tag Rails.root.join("/assets/min/angular/directives.js") %>
    <%#= javascript_include_tag Rails.root.join("/assets/min/angular/services.js") %>

    <!-- angular controllers -->
    <%#= javascript_include_tag Rails.root.join("/assets/min/angular/controllers.js") %>
    <%#= javascript_include_tag Rails.root.join("/assets/min/angular/templates.min.js") %>

    <link rel="stylesheet" type="text/css" href="assets/min/recommendation_main.min.css">
    
    <div ng-show="!loading" style="height:100%;">
      <div ng-view 
           class="main_view animate-slow"></div>
      <%= csrf_meta_tags %>
      <%= render :partial => "shared/favicon" %>
      <%= render :partial => "shared/meta_tags"%>
      <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-35051501-1', 'readersdoor.com');
        ga('send', 'pageview');
      </script>
    </div>
  </body>
</html>