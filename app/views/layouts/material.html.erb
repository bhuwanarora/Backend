    <body ng-controller="appController" 
        ng-keydown="scroll_on_keypress($event)" 
        ng-click="close_popups()" 
        ng-keypress="play_type_key($event)"
        msd-wheel="close_popups()">
        <audio id="audiotag1" src="assets/typewriter2.m4a" preload="auto"></audio>
        <audio id="audiotag2" src="assets/typewriter2.m4a" preload="auto"></audio>
        <audio id="audiotag3" src="assets/typewriter3.m4a" preload="auto"></audio>

        <div layout="column" layout-fill>
            <!-- <div ng-include src="'/assets/angular/html/shared/header.html'"></div> -->
            <md-toolbar md-scroll-shrink class="header <% if !@infinity %>'no_shadow'<% end %>">
                <section layout="row" layout-wrap>
                    <div flex="20" flex-sm="35" layout="row" layout-align="start center">
                        <md-button ng-show="visible_search_bar" class="burger padding" ng-click="toggleLeft($event)">
                            <a><span class="icon-menu2"></span></a>
                        </md-button>
                        <div ng-show="visible_search_bar" 
                             layout-align-lg="center center">
                            <a class="logo" href="/home">
                                <img src="assets/rd_icon.png"/>
                                <span hide-sm hide-md ng-hide="<%= @signup %>">ReadersDoor</span>
                            </a>
                        </div>
                    </div>
                    <div flex="50" flex-md="45" 
                         ng-controller="searchController"
                         flex-sm="10" 
                         layout="row" 
                         layout-align="end center" 
                         layout-align-sm="start center">
                        <md-button ng-click="show_search_bar()" 
                                   ng-show="visible_search_bar" show-sm hide>
                            <span class="icon-search"></span>
                        </md-button>
                        <div hide-sm class="search_icon">
                            <span class="icon-search"></span>
                        </div>
                        <!-- md-items="item in info.genres | filter:search_tag.genre" -->
                        <md-autocomplete md-selected-item="selected_item_search"
                                        md-search-text="search_text"
                                        md-items="item in search_results"
                                        md-search-text-change="query_search(search_text)"
                                        md-selected-item-change="on_select(item)"
                                        md-item-text="item.name"
                                        class="search"
                                        hide-sm
                                        flex="85"
                                        ng-click="stop_propagation($event)"
                                        placeholder="Search books, topics and more...">
                            <div layout="row"
                                layout-align="space-between"
                                md-highlight-text="item | search_item_type">
                                <div>{{item.name}}</div>
                                <b class="less_important">{{item | search_item_type}}</b>
                            </div>

                            <!-- <span md-highlight-text="search_text">
                                {{item}}
                            </span> -->
                        </md-autocomplete>
                    </div>
                    <div layout="row" layout-align="center center" flex="10" flex-md="15" flex-sm="20">
                        <md-button ng-show="visible_search_bar" class="library">
                            <a href="/infinity">Infinity</a>
                        </md-button>
                    </div>
                    <div flex="20" flex-sm="35" layout="row" layout-align="end center">
                        <a href="/room" ng-show="visible_search_bar">
                            <md-button class="small-padding">
                                <span class="icon-checkbox-unchecked"></span>
                            </md-button>
                        </a>
                        <md-button ng-show="visible_search_bar" class="small-padding" 
                            ng-click="toggle_notifications($event)">
                            <span class="icon-bell"></span>
                        </md-button>
                        <a href="/profile" ng-show="visible_search_bar">
                            <md-button class="profile_link">
                                <img src="https://fbcdn-sphotos-g-a.akamaihd.net/hphotos-ak-xaf1/t31.0-8/10694453_716527165083590_5032803263755359335_o.jpg" 
                                    class="circular">
                            </md-button>
                        </a>
                    </div>
                    <div layout="row" layout-align="center center" 
                            ng-hide="visible_search_bar" layout-fill layout-padding hide-md hide-lg>
                        <md-button flex="20" ng-click="show_search_bar()" hide-md hide-lg>
                            <span class="icon-search"></span>
                        </md-button>
                        <md-autocomplete
                            md-selected-item="selectedItem1"
                            md-search-text="searchText"
                            md-items="item in querySearch(searchText)"
                            md-item-text="display"
                            class="search"
                            flex="80" hide-md hide-lg
                            placeholder="Search books, topics and more...">
                            <span md-highlight-text="searchText">{{item.display}}</span>
                        </md-autocomplete>
                    </div>
                </section>
            </md-toolbar>

            <%= yield %>
            <div ng-controller="shareController" >
                <md-button class="md-fab md-fab-bottom-right animate-fast fixed_share"
                            aria-label="Eat cake"
                            ng-class="{'md-fab-custom-right': info.show_share || info.show_book_share}"
                            ng-click="show_share_page($event)"
                            ng-style="type_icon_pressed"
                            style="background-image: url('assets/type.png')">
                </md-button>
            </div>
            
            <md-progress-linear class="md-primary loader" 
                    ng-show="info.loading"
                    md-mode="indeterminate">
            </md-progress-linear>

            <md-progress-circular class="md-accent md-hue-1" md-mode="indeterminate" 
                    ng-if="info.cirular_loading">
            </md-progress-circular>

            <div ng-include src="'/assets/angular/html/shared/left_panel.html'" class="left_panel_container"></div>
            <div ng-include src="'/assets/angular/html/shared/notifications.html'" ng-if="show_notifications"></div>
            <div ng-include src="'/assets/angular/html/share/show.html'"></div>
            <!-- <div ng-include src="'/assets/angular/html/home/show.html'"></div> -->
        </div>
